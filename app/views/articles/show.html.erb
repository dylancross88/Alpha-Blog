<h2 align="center">Title: <%= @article.title %></h2>
<div class="well col-xs-8 col-xs-offset-2">
  <div class="listing center-block">
    <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <div class="user-gravatar"><%= link_to gravatar_for(@article.user), user_path(@article.user) %></div>
        <div class="user-title text-center"><%= link_to @article.user.username, user_path(@article.user) %></div>
      </div>
    </div>
  </div>
  <h4 class="text-center description"><strong>Description:</strong></h4>
  <hr>
  <%= simple_format(@article.description) %>
  <% if @article.categories.any? %>
    <p class="article-categories">
      Categories: <%= render @article.categories %>
    </p>
  <% end %>
  <div class="article-actions">
    <% if logged_in? && (current_user == @article.user || current_user.admin?) %>
      <%= link_to "Edit Article", edit_article_path(@article), {class: 'btn btn-primary'} %>
      <%= link_to "Delete Article", article_path(@article), method: :delete, data: {confirm: "Are you sure?"},
          class: 'btn btn-danger' %>
    <% end %>
    <%= link_to "View All Articles", articles_path, {class: 'btn btn-success'} %>
  </div>

</div>

