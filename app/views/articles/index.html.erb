<h1>Articles</h1>

<div class="table-responsive">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Created On</th>
        <th>Last Modified</th>
      </tr>
    </thead>
    <tbody>
      <% @articles.each do |article| %>
        <tr>
          <td><%= article.title %></td>
          <td><%= article.description %></td>
          <td><%= article.created_at.strftime("%d/%m/%Y @ %I:%M%P") %></td>
          <td><%= article.updated_at.strftime("%d/%m/%Y @ %I:%M%P") %></td>
          <td><%= link_to "View", article_path(article.id), class: "btn btn-sm btn-default" %></td>
          <td><%= link_to "Edit", edit_article_path(article.id), class: "btn btn-sm btn-default" %></td>
          <td><%= link_to "Remove", article_path(article.id), method: :delete, data: {confirm: "Are you sure?"},class: "btn btn-sm btn-danger" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>