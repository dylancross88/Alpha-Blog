<h1 align="center">Login</h1>

<%= form_for(:session, :html => {class: "form-horizontal", role: "form"}, url: login_path) do |f| %>
  <div class="form-group">
    <%= f.label :email, class: "control-label col-sm-2" %>
    <div class="col-sm-8">
      <%= f.text_field :email, class: "form-control", placeholder: "Enter email" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :password, class: "control-label col-sm-2" %>
    <div class="col-sm-8">
      <%= f.password_field :password, rows: 10, class: "form-control", autocomplete: "off" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit("Login", class: "btn btn-primary") %>
    </div>
  </div>
<% end %>