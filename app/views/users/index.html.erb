<h1 align="center">All Alpha Bloggers</h1>

<div align="center">
  <%= will_paginate %>
</div>
<% @users.each do |user| %>
  <div class="listing">
    <div class="row">
      <div class="well col-md-4 col-md-offset-4">
        <div class="user-gravatar"><%= link_to gravatar_for(user), user_path(user) %></div>
        <div class="user-title text-center"><%= link_to user.username, user_path(user) %></div>
        <div class="text-center"><small><%= pluralize(user.articles.count, "articles") if user.articles %></small></div>
      </div>
    </div>
  </div>
<% end %>
<div align="center">
  <%= will_paginate %>
</div>